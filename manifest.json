{
  "manifest_version": 3,
  "name": "EtherCS Market Extension",
  "version": "0.10",
  "permissions": [
    "cookies",
    "declarativeNetRequest",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
        "*://*.steamcommunity.com/*",
        "*://*.steampowered.com/*",
        "http://ethercs.com:3000/*"
    ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "referer-fix",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "externally_connectable": {
    "matches": ["http://ethercs.com:3000/*", "http://localhost:3000/*"]
  }
}
